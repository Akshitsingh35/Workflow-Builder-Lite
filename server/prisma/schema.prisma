generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workflow {
  id        String   @id @default(uuid())
  name      String
  steps     Json
  createdAt DateTime @default(now())
  runs      Run[]
}

model Run {
  id          String   @id @default(uuid())
  workflowId  String
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  inputText   String
  stepOutputs Json
  createdAt   DateTime @default(now())
}
