
# =============================
# Workflow Builder Lite Backend
# =============================
# Copy this file to .env and fill in the values for production or development.

# Database connection string
# For local PostgreSQL: postgresql://user:password@localhost:5432/workflow_builder
# For Neon: postgresql://user:password@host.neon.tech/neondb?sslmode=require
DATABASE_URL=

# Google Gemini API Key
# Get your free API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Server port (optional, defaults to 3001)
PORT=3001

# Client URL for CORS (e.g. http://localhost:5173 or your deployed frontend URL)
# Set this to your deployed frontend URL in production
CLIENT_URL=

# Node environment (optional)
# Set to 'production' in production
NODE_ENV=development
